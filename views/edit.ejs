<%- include('partials/header.ejs') %>

    <div class="content">
        <form class="form edit-form" action="/edit" method="post">
            <input class="input-author" type="text" id="author" name="author" placeholder="Search by author"><br>
            <input class="btn btn-success mt-2" type="submit" value="Search">
        </form>

        <% if(locals.posts) {
           for (let i=0; i<posts.length; i++) { %>
            <div class="ccard" id="<%= i %>">
                <div class="card-top">
                    <h4>
                        <%=  posts[i].title %><br>
                    </h4> 
                    <p>
                        <%=  posts[i].time %>
                    </p>  
                </div>
                <hr>
                <div class="card-middle">
                    <p>
                        <%=  posts[i].content %> 
                    </p>   
                </div>
                <div class="card-bottom" style="width: 90%; bottom: 10px; text-align: center">
                    <form class="form" action="/edit_form" method="get">
                        <button class="btn btn-outline-danger btn-sm" name="id" value="<%= posts[i].id %>">Edit</button>
                    </form>
                </div>
            </div>
        <% } 
        } %>
        
    </div>    

<%- include('partials/footer.ejs') %>